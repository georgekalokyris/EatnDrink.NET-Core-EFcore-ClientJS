@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}
<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" value="" asp-for="SearchTerm" />
            <button class="btn btn-primary">
                Search
            </button>
        </div>
    </div>



</form>

<hr />


<a asp-page="./Edit" class="btn btn-block btn-outline-success">Add new</a>

<div>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Cuisine</th>
            <th>Actions</th>
        </tr>

        @foreach (var restaurant in Model.Restaurants)
        {
            <partial name="_Summary" model="restaurant" />
        }

    </table>

</div>

<br />


