@page

@model OdeToFood.Pages.Restaurants.ListModel

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" value="" asp-for="SearchTerm"/>
            <button class="btn btn-primary">
                Search
            </button>
        </div>
    </div>



</form>

<table class="table table-hover">
    <thead> 
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Location</th>
            <th>Cuisine</th>
        </tr>
    </thead>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>
                @restaurant.Id
            </td>
            <td>
                @restaurant.Name
            </td>
            <td>
                @restaurant.Location
            </td>
            <td>
                @restaurant.Cuisine
            </td>
            <td>
                @*<a class="btn btn-lg" href="/Restaurants/Detail?restaurantId=@restaurant.Id">
                </a>*@
                <a class="btn btn-sm btn-dark btn-outline-info" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                Details
                </a>
                <a class="btn btn-sm btn-info btn-outline-dark" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                Edit
                </a>
            </td>
        </tr>
    }
</table>

<hr />

@Model.Message

