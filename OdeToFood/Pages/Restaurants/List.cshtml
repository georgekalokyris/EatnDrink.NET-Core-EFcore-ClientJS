@page

@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}
<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" value="" asp-for="SearchTerm" />
            <button class="btn btn-primary">
                Search
            </button>
        </div>
    </div>



</form>

<hr />


<a asp-page="./Edit" class="btn btn-block btn-outline-success">Add new</a>

@foreach (var restaurant in Model.Restaurants)
{
    <partial name="_Summary" model="restaurant" />
}


@section footer{
    <div>
        @Model.Message
    </div>
}

